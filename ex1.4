import java.util.Scanner;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class Screen_splitter {

	public static void main(String[] args) {
		
	File f = new File ("/home/cs200690659/ex1.4.html");
		System.out.println("Please enter a number between 1 to 50.");
		Scanner console = new Scanner(System.in);
		int n = console.nextInt();
		double width = (double)100/n;
		
				try{
					BufferedWriter bw = new BufferedWriter(new FileWriter(f));
					bw.write("<html><head><title>Lior reinitz ex1.4</title></head>\n<body>");
					switch(n%3){
					case 1:
					bw.write("<div style=\"width:"+width+"%;height:100%;background-color:blue;float:left\"></div>\n");
					break;
					case 2:
					bw.write("<div style=\"width:"+width+"%;height:100%;background-color:blue;float:left\"></div>\n"
							+ "<div style=\"width:"+width+"%;height:100%;background-color:green;float:left\"></div>\n");
					break;
					}
					for(int i=0;i<n/3;i++){
					   bw.write("<div style=\"width:"+width+"%;height:100%;background-color:blue;float:left\"></div>\n"
					   		+ "<div style=\"width:"+width+"%;height:100%;background-color:green;float:left\"></div>\n"
							+ "<div style=\"width:"+width+"%;height:100%;background-color:red;float:left\"></div>\n");
					
				} 
					bw.write("</body></html>\n");
					bw.close();
				}
				catch(IOException e){
					e.printStackTrace();
				}
	}
}